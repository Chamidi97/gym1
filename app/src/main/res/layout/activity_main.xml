<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.gym.Main">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="89dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/download__1_" />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_slogan"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_join_now_btn"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Already have a Account? login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="223dp"
        android:text="Find, Discover, Choose and Buy anything online gym."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="italic" />


</RelativeLayout>